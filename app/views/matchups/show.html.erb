	dogSpread = "+" + dogSpread.toString()
	
	let favChoice = "<%= @matchup.fav + ' ' + @matchup.spread %>"
	let dogChoice = "<%= @matchup.dog + ' ' %>" + dogSpread.toString()

	console.log(dogChoice)
	




</script>


